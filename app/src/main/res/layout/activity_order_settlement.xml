<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F6F6F6"
        >
      <ScrollView
          android:layout_width="match_parent"
          android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:layout_width="match_parent"
        android:layout_height="112dp"
        android:orientation="vertical"
        android:background="@drawable/radius_bg_white">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageButton
                android:layout_marginTop="10dp"
                android:layout_marginLeft="8dp"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:src="@drawable/location"
                android:background="#00000000"
                >

            </ImageButton>
            <TextView
                android:layout_marginTop="10dp"
                android:layout_marginBottom="3dp"
                android:id="@+id/address"
                android:layout_width="260dp"
                android:layout_height="35dp"
                android:textSize="23dp"
                android:textStyle="bold"
                android:text="厦门市集美区"
                android:textColor="#393838">

            </TextView>
            <ImageButton
                android:layout_marginTop="10dp"
                android:id="@+id/editaddress"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/switchaddress"
                android:background="@drawable/radius_bg_orange">

            </ImageButton>

        </LinearLayout>
        <TextView
            android:layout_marginBottom="3dp"
            android:layout_marginLeft="20dp"
            android:id="@+id/addressoutline"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:textSize="17dp"
            android:text="厦门理工学院"
            android:textColor="#605F5F"
            >

        </TextView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:orientation="horizontal">
            <TextView
                android:layout_marginLeft="20dp"
                android:id="@+id/receivername"
                android:textColor="#605F5F"
                android:textSize="17dp"
                android:text="xxx"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                >

            </TextView>
            <TextView

                android:id="@+id/phone"
                android:textColor="#605F5F"
                android:text="123123123"
                android:textSize="17dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                >

            </TextView>








        </LinearLayout>

        </LinearLayout>
    <LinearLayout

        android:layout_marginBottom="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/radius_bg_white">

        <TextView
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="餐品详情"
            android:textSize="20dp"
            >

        </TextView>

        <androidx.recyclerview.widget.RecyclerView
            app:layout_constraintTop_toBottomOf="parent"
            android:id="@+id/orderfoodslist"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            />
        <LinearLayout
            android:layout_marginLeft="20dp"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="250dp"
                android:layout_height="30dp"
                android:text="商品小计"
                android:textSize="20dp">

            </TextView>
            <TextView
                android:id="@+id/totalPrice"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:text="66元"
                android:textSize="20dp"
                >

            </TextView>

        </LinearLayout>


    </LinearLayout>

    <LinearLayout

        android:layout_marginBottom="20dp"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="vertical"
        android:background="@drawable/radius_bg_white">
        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:layout_width="match_parent"
            android:layout_height="60dp">
            <TextView
                android:layout_marginTop="4dp"
                android:layout_width="50dp"
                android:layout_height="30dp"
                android:text="餐具"
                android:textSize="20dp"></TextView>

            <RadioGroup

                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:orientation="horizontal">
                <RadioButton
                    android:id="@+id/need"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:text="需要"
                    android:checked="true">

                </RadioButton>
                <RadioButton
                    android:id="@+id/without"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:text="不需要">

                </RadioButton>

            </RadioGroup>
        </LinearLayout>


    </LinearLayout>

        <LinearLayout

            android:layout_marginBottom="20dp"
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:orientation="horizontal"
            android:background="@drawable/radius_bg_white">
            <TextView
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:layout_width="50dp"
                android:layout_height="30dp"
                android:text="备注"
                android:textSize="20dp">

            </TextView>
            <EditText
                android:layout_marginTop="23dp"
                android:layout_width="250dp"
                android:layout_height="40dp"
                android:textSize="20dp">

            </EditText>
        </LinearLayout>


    </LinearLayout>
      </ScrollView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_height="55dp"
            android:layout_marginBottom="23dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:flow_verticalBias="0.5"
            android:alpha="0.9"
            android:orientation="horizontal"
            android:background="@drawable/radius_cartbg_grey">
            <TextView
                android:paddingTop="16dp"
                android:paddingLeft="20dp"
                android:id="@+id/shoppingCartPrice"
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:text="0元"
                android:textStyle="bold"
                android:textSize="20dp"
                android:textColor="@color/white">

            </TextView>
            <TextView
                android:paddingLeft="13dp"
                android:paddingTop="16dp"
                android:paddingRight="10dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="确认支付"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:textSize="20dp">

            </TextView>

            <ImageButton
                android:id="@+id/pay"
                android:layout_marginLeft="10dp"
                android:layout_width="90dp"
                android:layout_height="match_parent"
                android:textSize="30dp"
                android:src="@drawable/done"
                android:textColor="@color/black"
                android:background="@drawable/radius_bg_orange">

            </ImageButton>



        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>